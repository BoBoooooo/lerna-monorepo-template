{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "declaration": true,
        "allowJs": false,
        "downlevelIteration": true,
        "paths": {
            "@namespace/*": ["packages/*/src"]
        },
        "lib": ["dom", "es2015"]
    }
}
